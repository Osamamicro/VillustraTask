@model LoginViewModel

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-4">
            <h3 class="text-center">Login</h3>
            <form asp-action="Login" method="post">
                <div class="form-group">
                    <label asp-for="Email"></label>
                    <input asp-for="Email" class="form-control" required />
                </div>
                <div class="form-group">
                    <label asp-for="Password"></label>
                    <input asp-for="Password" type="password" class="form-control" required />
                </div>

                <!-- Captcha Section -->
                <div class="form-group mt-3">
                    <img src="/Account/GetCaptcha" id="captchaImage" alt="Captcha" />
                    <button type="button" class="btn btn-secondary btn-sm" onclick="reloadCaptcha()">Refresh</button>
                </div>

                <div class="form-group mt-2">
                    <label asp-for="CaptchaInput">Enter Captcha:</label>
                    <input asp-for="CaptchaInput" class="form-control" required />
                </div>

                <button type="submit" class="btn btn-primary btn-block mt-3">Login</button>
            </form>
        </div>
    </div>
</div>

<!-- Reload Captcha Script -->
<script>
    function reloadCaptcha() {
        document.getElementById("captchaImage").src = "/Account/GetCaptcha?" + new Date().getTime();
    }
</script>
