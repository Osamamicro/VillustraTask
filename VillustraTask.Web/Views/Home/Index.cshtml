@{
    ViewData["Title"] = "Home Page";
}

<div class="container">
    <h2 class="text-primary">Bootstrap & DataTables Test</h2>

    <table id="exampleTable" class="table table-striped">
        <thead>
            <tr>
                <th>ID</th>
                <th>Name</th>
                <th>Email</th>
            </tr>
        </thead>
        <tbody>
            <tr>
                <td>1</td>
                <td>John Doe</td>
                <td>john@example.com</td>
            </tr>
            <tr>
                <td>2</td>
                <td>Jane Doe</td>
                <td>jane@example.com</td>
            </tr>
        </tbody>
    </table>
</div>

@section Scripts {
    <script>
        $(document).ready(function () {
            console.log("jQuery Loaded:", typeof jQuery !== "undefined");
            console.log("DataTables Loaded:", typeof $.fn.DataTable !== "undefined");

            if ($.fn.DataTable) {
                $('#exampleTable').DataTable(); // Initialize DataTables
            } else {
                console.error("DataTables is not loaded correctly!");
            }
        });
    </script>
}
